num = input("Give a number: ")
a = len(num)

sum = 0
if num.isdecimal():
  while a > 0:
    sum += int(num[a-1])**int(len(num))
    a-=1
  if sum == int(num):
      print(num, "is an Armstrong number")
  else:
      print(num, "is not an Armstrong number")
else:
  print("It is an invalid entry. Don't use non-numeric, float, or negative values!")
